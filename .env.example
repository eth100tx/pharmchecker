# PharmChecker Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pharmchecker
DB_USER=postgres
DB_PASSWORD=your_password_here

# Logging
LOGGING_LEVEL=INFO

# Data Storage
DATA_DIR=data
STORAGE_TYPE=local

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Authentication Configuration
AUTH_MODE=local  # Options: 'local' (development) or 'github' (production)
DEFAULT_USER_EMAIL=admin@localhost  # Default user for local development
DEFAULT_USER_ROLE=admin  # Default role for local development

# GitHub OAuth (for AUTH_MODE=github)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Optional: Supabase Storage (if using STORAGE_TYPE=supabase)
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_key